# Maintainer: Rusty Commit <rusty-commit@users.noreply.github.com>
# Contributor: Rusty Commit <rusty-commit@users.noreply.github.com>

pkgname=rusty-commit
pkgver=__VERSION__
pkgrel=1
pkgdesc="AI-powered commit message generator written in Rust"
arch=('x86_64' 'aarch64')
url="https://github.com/hongkongkiwi/rusty-commit"
license=('MIT')
depends=()
makedepends=('curl' 'wget')
source=("$url/releases/download/v${pkgver}/rusty-commit-v${pkgver}-x86_64-unknown-linux-musl.tar.gz")
sha256sums=('__SHA256_X86_64__')
validpgpkeys=()

package() {
    cd "${srcdir}"
    install -D -m 755 "rusty-commit-v${pkgver}-x86_64-unknown-linux-musl/rco" "${pkgdir}/usr/bin/rco"
}
